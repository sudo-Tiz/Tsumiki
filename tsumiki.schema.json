		"style": {
			"type": "string",
			"enum": ["default", "leaf", "leaf-inverse", "flat", "shadow", "bordered"],
			"description": "Determines the style of the widget."
		},
		"layer": {
			"type": "string",
			"enum": ["top", "overlay", "bottom", "background"],
			"description": "Determines the layer of the widget."
		},
		"mode": {
			"type": "string",
			"enum": ["label", "graph", "progress"],
			"description": "Specifies the mode of the widget."
		},
		"transition_type": {
			"type": "string",
			"enum": [
				"crossfade",
				"slide-left",
				"slide-right",
				"slide-up",
				"slide-down",
				"none"
			],
			"description": "Specifies the type of transition effect for notifications."
		},
		"transition_duration": {
			"type": "integer",
			"minimum": 0,
			"description": "Specifies the duration of the transition effect in milliseconds."
		},
		"anchor": {
			"type": "string",
			"enum": [
				"center-left",
				"center",
				"center-right",
				"top",
				"top-right",
				"top-center",
				"top-left",
				"bottom-left",
				"bottom-center",
				"bottom-right"
			],
			"description": "Specifies the anchor position of the widget."
		},
		"baseProperties": {
			"label": {
				"type": "boolean",
				"description": "Determines whether the widget has a label."
			},
			"tooltip": {
				"type": "boolean",
				"description": "Determines whether the widget has a tooltip."
			},
			"show_icon": {
				"type": "boolean",
				"description": "Determines whether to show the icon."
			}
		},
		"widgets": {
			"type": "array",
			"items": {
				"anyOf": [
					{
						"type": "string",
